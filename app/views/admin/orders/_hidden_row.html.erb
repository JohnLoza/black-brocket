<% if !o.tracking_code.blank? %>
  <p>Código de rastreo: <%= o.tracking_code %></p>
<% end # if o.tracking_code != nil # %>

<% if ["SENT","DELIVERED"].include? params[:type] %>
  <p>
    Paquetería: <%= o.Parcel.parcel_name %>
  </p>
<% end %>

<% if @actions["ACCEPT_REJECT_PAYMENT"] and params[:type] == "ACCEPT_REJECT_PAYMENT" %>
  <% if !o.pay_img.file.nil? or !o.pay_pdf.file.nil? %>
    <%= link_to admin_download_payment_path(o.download_payment_key),
                target: "_blank" do %>
      <span>Comprobante de pago</span><br>
      <i class="fa fa-file-o fa-3x"></i>
    <% end %><br>
  <% end # if !o.pay_img.blank? # %>
  <%= form_tag admin_accept_order_pay_path(o.hash_id,"true"), method: :put do  %>
    <%= label_tag :payment_folio, 'Folio del pago' %>
    <%= text_field_tag :payment_folio, '', class: 'form-control', required: true %>
    <%= submit_tag 'Aceptar', class: 'btn btn-primary btn-sm m-t',
        data:{confirm: 'Seguro(a) de aceptar el pago?'} %>
  <% end %>

  <%= link_to "Rechazar", "#", :class => "btn btn-danger btn-sm m-t" ,
            onclick: "update_reject_pay_form('#{o.hash_id}')" %>
<% end # if o.state == "PAYMENT_DEPOSITED" # %>

<% if @actions["CAPTURE_TRACKING_CODE"] and params[:type] == "CAPTURE_TRACKING_CODE" %>
  <%= form_tag(admin_capture_tracking_code_path(o.hash_id), method: :put) do %>
    <br>
    <%= label_tag :parcel_id, "Paquetería" %>
    <%= select_tag :parcel_id, options_from_collection_for_select(
        @parcels, :id, :parcel_name), prompt: :Selecciona,
        :class => "form-control m-b", required: true %>

    <%= label_tag :tracking_code, "Código de rastreo" %>
    <%= text_field_tag :tracking_code, "",
        {:class => "form-control m-b", :maxlength => 20, required: true} %>

    <%= submit_tag "Guardar código de rastreo",
        {:class => "btn btn-primary",
          data: {confirm: "Estas seguro(a) de ser el código correcto?"}} %>
  <% end %>
<% end %>
