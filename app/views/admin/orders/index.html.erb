<% provide(:title, "Órdenes") %>
<% if params[:distributor] %>
  <%= render partial: "/shared/admin/header_band", locals:
        {title: "Órdenes", labels: ['Distribuidores', 'Órdenes'], links: [admin_distributors_path]} %>
<% else %>
  <%= render partial: "/shared/admin/header_band", locals: {title: "Órdenes", labels: ['Órdenes']} %>
<% end %>

<!--Content whit animation-->
<div class="wrapper wrapper-content animated fadeInRight ecommerce">
  <div class="row">

    <div class="ibox">
      <div class="ibox-content text-center">
          <h3 class="m-b-xxs">Listado de órdenes de los clientes</h3>
          <small>Aquí verás la lista de las órdenes realizadas por los clientes desde la página web.</small>
      </div>
    </div>

    <!--Table-->
    <div class="row">
      <% if @actions["CREATE_COMMISION"] and params[:type] == "DELIVERED" %>
        <%= form_tag(admin_commissions_path(distributor: params[:distributor])) do %>
          <div class="col-lg-12">
            <div class="ibox">
              <%= submit_tag "Crear comisión", :class => "btn btn-success pull-right" %>
              <div class="clearfix"></div>
            </div>
          </div>
          <%= render partial: "presentation_table" %>
        <% end #form end#%>
      <% else %>
        <%= render partial: "presentation_table" %>
      <% end %>
    </div>
    <!--End Table-->

  </div>
</div>
<!--End content whit animation-->
</br></br>

<script type="text/javascript">
// init ekko-lightbox
$(document).on('click', '[data-toggle="lightbox"]', function(event) {
  event.preventDefault();
  $(this).ekkoLightbox();
});
</script>

<%= stylesheet_link_tag 'ekko-lightbox.min', media: 'all' %>
<%= javascript_include_tag 'ekko-lightbox.min' %>
