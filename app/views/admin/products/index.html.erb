<% provide(:title, "Productos") %>
<%= render partial: "/shared/admin/header_band", locals: {title: "Productos", labels: ['Productos']} %>

<!--Content whit animation-->
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <%= render partial: '/shared/admin/header_with_search',
    locals: {title: 'Lista de Productos', search_url: admin_products_path,
      new_permission: 'products@create', new_url: new_admin_product_path } %>

    <!--Table-->
    <div class="row">

      <div class="col-lg-12">
        <div class="ibox">
          <div class="ibox-content">

            <div class="row m-b-sm m-t-sm">
              <div class="col-md-10">
                <input type="text" class="form-control input-sm m-b-xs" id="filter" maxlength="25" placeholder="Buscar en tabla">
              </div>
              <div class="col-md-2">
                <%= link_to(admin_products_path, class: "btn btn-white btn-sm m-b-xs full-width") do %>
                <i class="fa fa-refresh"></i> Actualizar
                <% end %>
              </div>
            </div>

            <!--<div class="table-responsive">-->
            <table class="footable table table-stripped toggle-arrow-tiny" data-filter=#filter>
              <thead>
                <tr>
                  <th data-sort-ignore="true"></th>
                  <th data-sort-ignore="true" data-hide="phone">Imagen</th>
                  <th data-hide="phone">Clave</th>
                  <th>Producto</th>
                  <th data-hide="phone" data-type="numeric">Precio</th>
                  <th data-hide="all">Fecha de creación</th>
                  <th data-hide="all">Última modificación</th>
                  <th data-hide="phone">Web</th>
                  <th data-hide="phone" data-sort-ignore="true">Acción</th>
                </tr>
              </thead>
              <tbody>
                <%= render @products %>
              </tbody>
              <tfoot>
                <tr>
                  <td colspan="7">
                    <div class="pull-right">
                      <%= will_paginate @products, renderer: BootstrapPagination::Rails %>
                    </div>
                  </td>
                </tr>
              </tfoot>
            </table>
            <!--</div>-->
            <!-- Page-Level Scripts -->
            <script>
            $(document).ready(function() {
              $('.footable').footable();
            });
            </script>

          </div>
        </div>
      </div>
    </div>
    <!--End Table-->

  </div>
</div>
<!--End content whit animation-->
