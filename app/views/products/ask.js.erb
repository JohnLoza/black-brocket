<% if @question.persisted? %>
  $("#prod_question_description").val("");
  $('#questions').prepend('<%= escape_javascript(
    render partial: "question", locals: { question: @question }) %>');

  $("#dismissible_alerts").append("<%= j render partial: '/shared/dismissible_alert', locals: {message_type: :success, message: 'Se ha guardado tu pregunta.'} %>");
<% else %>
  $("#dismissible_alerts").append("<%= j render partial: '/shared/dismissible_alert', locals: {message_type: :success, message: 'Ocurrió un error al guardar, inténtalo de nuevo.'} %>");
<% end %>
removeLoader();
