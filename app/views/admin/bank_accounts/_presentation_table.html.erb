<div class="col-lg-12">
  <div class="ibox">
  	<div class="ibox-content">

  			<div class="row m-b-sm m-t-sm">
          <div class="col-md-10">
            <input type="text" class="form-control input-sm m-b-xs" id="filter" maxlength="25" placeholder="Buscar en tabla">
          </div>
  				<div class="col-md-2">
  					<%= link_to(admin_bank_accounts_path, :class => "btn btn-white btn-sm full-width") do %>
  						<i class="fa fa-refresh"></i> Actualizar
  					<% end %>
  				</div>
  			</div>

  			<table class="footable table table-stripped  toggle-arrow-tiny" data-filter=#filter>
  					<thead>
    					<tr>
    					    <th>Nombre del banco</th>
    					    <th>Número de cuenta</th>
    					    <th>A nombre de</th>
    					    <th data-sort-ignore="true">Acción</th>
    					</tr>
  					</thead>
  					<tbody>
  					<% @bank_accounts.each do |b| %>
  					  <tr>
    						<td><%= b.bank_name %></td>
    						<td><%= b.account_number %></td>
    						<td><%= b.owner %></td>
    						<td>
                  <% if @actions["UPDATE"] %>
                    <%= link_to "<i class='fa fa-pencil'></i> Modificar".html_safe,
                      edit_admin_bank_account_path(b.id), :class => "btn btn-white btn-sm hidden-button" %>
                  <% end # if @actions["UPDATE"] # %>

                  <% if @actions["DELETE"] %>
      							<%= link_to "<i class='fa fa-trash'></i> Eliminar".html_safe,
                      admin_bank_account_path(b.id), :class => "btn btn-white btn-sm hidden-button",
                      method: "delete", data: { confirm: "Estas seguro(a) de eliminarlo?" } %>
                  <% end # if @actions["DELETE"] # %>
    						</td>
  					  </tr>
  					<% end %>
  					</tbody>
  			</table>

  	</div>
  </div>
</div>
