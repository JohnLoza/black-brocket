<div class="col-lg-12">
   <div class="ibox">
      <div class="ibox-content">

           <div class="row m-b-sm m-t-sm">
               <div class="col-md-10">
                 <input type="text" class="form-control input-sm m-b-xs" id="filter" maxlength="25" placeholder="Buscar en tabla">
               </div>
               <div class="col-md-2">
                  <%= link_to(admin_warehouses_path, :class => "btn btn-white btn-sm") do %>
                    <i class="fa fa-refresh"></i> Actualizar
                  <% end %>
               </div>
           </div>

           <table class="footable table table-stripped  toggle-arrow-tiny" data-filter=#filter>
                   <thead>
                     <tr>
                         <th>Identificador</th>
                         <th>Nombre</th>
                         <th data-hide="phone">Teléfono</th>
                         <th data-hide="all">Ubicación</th>
                         <th data-hide="all">Fecha de creación</th>
                         <th data-hide="all">Última modificación</th>
                         <th data-sort-ignore="true">Acción</th>
                     </tr>
                   </thead>
                   <tbody>

                     <% @warehouses.each do |w| %>
                       <tr>
                         <td><%= w.hash_id %></td>
                         <td><%= w.name %></td>
                         <td><%= w.telephone %></td>
                         <% w_city = w.City %>
                         <td><%= w_city.name %>, <%= w_city.State.name %></td>
                         <td><%= l(w.created_at, format: :long) %></td>
                         <td><%= l(w.updated_at, format: :long) %></td>
                         <td>
                           <% if @actions["SHOW"] %>
                             <%= link_to "<i class='fa fa-eye'></i> Ver".html_safe, admin_warehouse_path(w.hash_id), :class => "btn btn-white btn-sm m-b-xs hidden-button" %>
                           <% end %>

                           <% if @actions["WAREHOUSE_PRODUCTS"] %>
                             <%= link_to "<i class='fa fa-cube'></i> Productos".html_safe, admin_warehouse_products_path(w.hash_id), :class => "btn btn-white btn-sm m-b-xs hidden-button" %>
                           <% end %>

                           <% if @actions["UPDATE_REGIONS"] %>
                             <%= link_to "<i class='fa fa-globe'></i> Zonas de distribución".html_safe, admin_warehouse_regions_path(w.hash_id), :class => "btn btn-white btn-sm m-b-xs hidden-button" %>
                           <% end %>

                           <% if @actions["PARCELS"] %>
                             <%= link_to "<i class='fa fa-truck'></i> Paqueterías".html_safe, admin_warehouse_parcels_path(w.hash_id), :class => "btn btn-white btn-sm m-b-xs hidden-button" %>
                           <% end %>

                           <% if @actions["UPDATE"] %>
                             <%= link_to "<i class='fa fa-pencil'></i> Modificar".html_safe, edit_admin_warehouse_path(w.hash_id), :class => "btn btn-white btn-sm m-b-xs hidden-button" %>
                           <% end %>

                           <% if @actions["DELETE"] %>
                             <%= link_to "<i class='fa fa-trash'></i> Eliminar".html_safe, admin_warehouse_path(w.hash_id), :class => "btn btn-white btn-sm m-b-xs hidden-button" , method: "delete", data: { confirm: "Estas seguro(a) de eliminarlo?" } %>
                           <% end %>
                         </td>
                       </tr>
                     <% end %>

                   </tbody>
                   <tfoot>
                     <tr>
                         <td colspan="4">
                             <div class="pull-right">
                               <%= will_paginate @warehouses, renderer: BootstrapPagination::Rails if @warehouses %>
                             </div>
                         </td>
                     </tr>
                   </tfoot>
           </table>

           <script>
               $(document).ready(function() {
                   $('.footable').footable();
               });
           </script>

      </div>
   </div>
</div>
