<tr>
  <td><%= image_tag @bank.image.url(:mini) || 'user_avatar.png' %></td>
  <td><%= @bank.name %></td>
  <td><%= bank_account.account_number %></td>
  <td><%= bank_account.interbank_clabe %></td>
  <td><%= bank_account.owner %></td>
  <td>
    <% if @current_user.has_permission?('bank_accounts@update') %>
      <%= link_to "<i class='fa fa-pencil'></i> Modificar".html_safe,
        edit_admin_bank_account_path(@bank, bank_account), class: "btn btn-white btn-sm hidden-button" %>
    <% end # if @actions["UPDATE"] # %>

    <% if @current_user.has_permission?('bank_accounts@delete') %>
      <%= link_to "<i class='fa fa-trash'></i> Eliminar".html_safe,
        admin_bank_account_path(params[:bank_id], bank_account), class: "btn btn-danger btn-sm hidden-button",
        method: "delete", data: { confirm: "Estas seguro(a) de eliminarlo?" } %>
    <% end # if @actions["DELETE"] # %>
  </td>
</tr>
