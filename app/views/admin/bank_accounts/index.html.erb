<% provide(:title, "Cuentas de banco") %>
<%= render partial: "/shared/admin/header_band", locals: {title: "Cuentas de banco", labels: [@bank.name,'Cuentas de banco'], links: [admin_banks_path]} %>

<!--Content whit animation-->
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">

    <%= render partial: '/shared/admin/header_with_search',
    locals: {title: 'Cuentas de Banco', search_url: admin_bank_accounts_path(@bank),
      new_permission: 'bank_accounts@create', new_url: new_admin_bank_account_path(@bank) } %>

    <div class="row">
      <div class="col-lg-12">
        <div class="ibox">
        	<div class="ibox-content">

      			<table class="footable table table-stripped  toggle-arrow-tiny" data-filter=#filter>
    					<thead>
      					<tr>
                  <th>Imagen</th>
    					    <th>Nombre del banco</th>
    					    <th><i class="fa fa-search"></i> Número de cuenta</th>
                  <th><i class="fa fa-search"></i> CLABE interbancaria</th>
    					    <th>A nombre de</th>
    					    <th data-sort-ignore="true">Acción</th>
      					</tr>
    					</thead>
    					<tbody>
    					  <%= render @bank_accounts %>
    					</tbody>
      			</table>

        	</div>
        </div>
      </div>

    </div>

  </div>
</div>
<!--End content whit animation-->
<br><br>
