<% if @order and @bank %>
  <% link = link_to "Cambiar método de pago", "#", class: "btn btn-default",
              onclick: "place_payment_method_form();",
              id: "update_payment_method_form" %>
  <% hash = {accounts: @bank_accounts, bank_name: @bank.name,
              reference: @order.hash_id} %>

  $('#bank-payment-info').html("<%= j render partial: 'bank_payment_info', locals: hash %>");
  $('#update_payment_method_form').remove();
  $('#myModal').find('.modal-footer').append('<%= link %>');
  $('#myModal').modal('show');
<% end %>

function place_payment_method_form(){
  $('#myModal').modal('hide');
  modal = $('#modal');
  modal.find('.modal-title').html('Actualizar medio de pago para la órden <%= @order.hash_id %>');
  modal.find('.modal-body').html("<%= j render partial:'update_payment_method_form', locals:{order: @order} %>");
  modal.modal('show');
}
