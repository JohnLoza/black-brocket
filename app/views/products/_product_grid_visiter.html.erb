<% @products.each do |p| %>
  <div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <% @photos.each do |photo| %>
          <% if photo.product_id == p.id %>
            <%= link_to image_tag(photo.photo.url(:thumb)), product_path(p.hash_id) %>
            <% break %>
          <% end %>
        <% end %>
        <div class="caption">
          <span class="pull-right">
            $<%= p.price %> MXN
          </span>

          <h3><b><%= p.name %></b></h3>

          <p class="categories">
            <%= image_tag 'hot-drink-black.png' if p.hot %>
            <%= image_tag 'cold-drink-black.png' if p.cold %>
            <%= image_tag 'frappe-black.png' if p.frappe %>
          </p>
        </div>
    </div>
  </div>
<% end %>
