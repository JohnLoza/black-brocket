<% provide(:title, "Clientes") %>
<%= render partial: "/shared/admin/header_band", locals: {title: "Clientes", labels: ["Clientes"]} %>

<!--Content whit animation-->
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">

    <%= render partial: "/shared/admin/header_with_search",
      locals: {title: "Lista de Clientes", search_url: admin_clients_path,
      new_permission: nil, new_url: nil } %>

    <div class="row">
      <div class="col-lg-12">
        <div class="ibox">
        	<div class="ibox-content">

            <table class="footable table table-stripped  toggle-arrow-tiny" data-filter=#filter>
                <thead>
                  <tr>
                      <th data-sort-ignore="true"></th>
                      <th data-hide="phone" data-sort-ignore="true"></th>
                      <th data-hide="phone">Nombre</th>
                      <th>Correo electrónico</th>
                      <th data-hide="phone">Ubicación</th>
                      <th data-hide="all">Teléfono</th>
                      <th data-hide="phone">Acciones</th>
                      <th data-hide="all">Última revisión</th>
                      <th data-hide="all">Última visita</th>
                  </tr>
                </thead>
                <tbody>
                  <%= render @clients %>
                </tbody>
                <tfoot>
                  <tr>
                    <td colspan="7">
                      <div class="pull-right">
                        <%= will_paginate @clients, renderer: BootstrapPagination::Rails %>
                      </div>
                    </td>
                  </tr>
                </tfoot>
            </table>

        	</div>
        </div>
      </div>

      <script>
      $(document).ready(function() {
        $(".footable").footable();
      });
      </script>
    </div>

  </div>
</div>
<!--End content whit animation-->
<br><br>
