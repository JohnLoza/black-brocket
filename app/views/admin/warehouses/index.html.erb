<% provide(:title, "Almacenes") %>
<%= render partial: "/shared/admin/header_band", locals: {title: "Almacenes", labels: ['Almacenes']} %>

<!--Content whit animation-->
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">

    <%= render 'header_with_search' %>

    <!--Table-->
    <div class="row">

      <div class="col-lg-12">
        <div class="ibox">
          <div class="ibox-content">

            <table class="footable table table-stripped  toggle-arrow-tiny" data-filter=#filter>
              <thead>
                <tr>
                  <th>Identificador</th>
                  <th>Nombre</th>
                  <th data-hide="phone">Teléfono</th>
                  <th data-hide="all">Ubicación</th>
                  <th data-hide="all">Fecha de creación</th>
                  <th data-hide="all">Última modificación</th>
                  <th data-sort-ignore="true">Acción</th>
                </tr>
              </thead>
              <tbody>
                <%= render @warehouses %>
              </tbody>
              <tfoot>
                <tr>
                  <td colspan="4">
                    <div class="pull-right">
                      <%= will_paginate @warehouses, renderer: BootstrapPagination::Rails %>
                    </div>
                  </td>
                </tr>
              </tfoot>
            </table>

          </div>
        </div>
      </div>

    </div>
    <!--End Table-->

  </div>
</div>
<!--End content whit animation-->
<script>
$(document).ready(function() {
  $('.footable').footable();
});
</script>
