<div class="wrapper wrapper-content">
  <div class="row animated fadeInRight">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
          <h5>Configuración de Cajas</h5>
          <div class="ibox-tools">
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
          </div>
      </div>
      <div class="ibox-content">

        <%= form_for(:box, url: admin_boxes_configuration_path(), method: :post, 
          html: {class: "form-horizontal"}) do |f| %>
          
          <section class="boxes_fields">
            <% if @boxes and @boxes.any? %>
              <% @boxes.each do |box| %>
                <%= render partial: "box_fields", locals: {box: box} %>
              <% end %>
            <% else %>
              <%= render partial: "box_fields" %>
            <% end %>
          </section>

          <div class="form-group">
            <div class="col-sm-4 col-sm-offset-2">
              <a class="btn btn-white" href="javascript:history.back();">Cancelar</a>

              <a class="btn btn-white" onclick="addBoxFields();">
                <i class="fa fa-plus"></i>
                Añadir campos
              </a>

              <%= submit_tag "Guardar", class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
