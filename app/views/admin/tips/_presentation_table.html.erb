
<div class="row m-b-sm m-t-sm">
  <div class="col-md-10">
    <input type="text" class="form-control input-sm m-b-xs" id="filter" maxlength="25" placeholder="Buscar en tabla">
  </div>
  <div class="col-md-2">
    <%= link_to(admin_tips_path, :class => "btn btn-white btn-sm full-width") do %>
      <i class="fa fa-refresh"></i> Actualizar
    <% end %>
  </div>
</div>

<table class="footable table table-stripped  toggle-arrow-tiny" data-filter=#filter>
    <thead>
      <tr>
          <th data-sort-ignore="true"></th>
          <th data-sort-ignore="true"></th>
          <th data-hide="phone">Título</th>
          <th data-hide="phone" data-sort-ignore="true">Fecha de creación</th>
          <th data-sort-ignore="true">Acción</th>
      </tr>
    </thead>
    <tbody>
    <% @tips.each do |t| %>
      <tr>
        <td></td>
        <td class="project-people">
          <% if !t.video.blank? %>
            <%= link_to "<i class='fa fa-file-video-o fa-3x'></i>".html_safe,
                t.video.url, target: "_blank" %>
          <% elsif !t.image.blank? %>
            <%= image_tag t.image.url(:thumb) %>
          <% else %>
            <strong>Sin foto</strong>
          <% end %>
        </td>
        <td><%= t.title %></td>
        <td><%= t.created_at %></td>
        <td>
          <%= link_to "<i class='fa fa-pencil'></i> Editar".html_safe,
              edit_admin_tip_path(t.id), :class => "btn btn-white btn-sm hidden-button" %>
        </td>
      </tr>
    <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="7">
          <div class="pull-right">
            <%= will_paginate @tips, renderer: BootstrapPagination::Rails %>
          </div>
        </td>
      </tr>
    </tfoot>
</table>

<script>
    $(document).ready(function() {
        $('.footable').footable();
    });
</script>
