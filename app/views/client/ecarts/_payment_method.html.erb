<section class="row banks inline-block step step-3 hidden text-center">
  <h4>Seleccione el m√©todo de pago</h4>

  <div>
    <%= radio_button_tag "payment_method", -1, false, autocomplete: :off, required: true, 
      onchange: "removeFilter('.payment_img_#{-1}', 'payment_type')",
      info: "Pago con tarjeta", style: 'display: none;' %>
    <label for="payment_method_<%= -1 %>">
      <%= image_tag "visa-mastercard-logo.png", class: "payment_img_#{-1} payment_type" %>
    </label>
  </div>

  <div>
    <%= radio_button_tag "payment_method", 0, false, autocomplete: :off, required: true, 
      onchange: "removeFilter('.payment_img_#{0}', 'payment_type')",
      info: "Oxxo pay", style: 'display: none;' %>
    <label for="payment_method_<%= 0 %>">
      <%= image_tag "oxxo-logo.png", class: "payment_img_#{0} payment_type" %>
    </label>
  </div>

  <% @banks.each do |bank| %>
    <div>
      <%= radio_button_tag "payment_method", bank.id, false, autocomplete: :off, required: true, 
        onchange: "removeFilter('.payment_img_#{bank.id}', 'payment_type')", 
        info: bank.name, style: 'display: none;' %>
      <label for="payment_method_<%= bank.id %>">
        <%= image_tag bank.image.url(:mini), class: "payment_img_#{bank.id} payment_type" %>
      </label>
    </div>
  <% end %>
</section>
