<div class="row">

  <div class="col-lg-12">
      <div class="ibox float-e-margins">
          <div class="ibox-content">
            <%= form_for(@bank, :url => @url, :html => {:class => 'form-horizontal', id: 'bank_form'}) do |f| %>
              <%= render :partial=>'/shared/error_messages', locals:{entity: @bank} %>

              <div class="form-group">
                <label class="col-sm-2 control-label"><%= f.label :bank_name, "Nombre del banco" %></label>
                <div class="col-sm-10">
                  <%= f.text_field :name, :class => 'form-control', :placeholder => "ej. Banamex", :required => true, :maxlength => 50 %>
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label"><%= f.label :owner, "A nombre de:" %></label>
                <div class="col-sm-10">
                  <%= f.text_field :owner, :class => 'form-control', :placeholder => "ej. BlackBrocket S.A. de C.V.", :required => true, :maxlength => 150 %>
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label"><%= f.label :email, "Correo electrÃ³nico:" %></label>
                <div class="col-sm-10">
                  <%= f.email_field :email, :class => 'form-control', :required => true, :maxlength => 150 %>
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label"><%= f.label :RFC, "RFC:" %></label>
                <div class="col-sm-10">
                  <%= f.text_field :RFC, :class => 'form-control', :required => true, :maxlength => 150 %>
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label"><%= f.label :image, "Imagen:" %></label>
                <div class="col-sm-10">
                  <% if @bank.image.file.nil? %>
                    <%= f.file_field :image, :required => true %>
                  <% else %>
                    <%= f.file_field :image %>
                  <% end %>
                </div>
              </div>
              <% if !@bank.image.file.nil? %>
                  <%= image_tag(@bank.image.url) %>
              <% end %>

              <div class="hr-line-dashed"></div>
              <div class="form-group">
                  <div class="col-sm-4 col-sm-offset-2">
                      <a class="btn btn-white" href="javascript:history.back();">Cancelar</a>
                      <%= f.submit "Guardar cambios", :class => "btn btn-primary" %>
                  </div>
              </div>
            <% end %>
          </div>
      </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('#bank_form').parsley();
  });
</script>
<%= javascript_include_tag 'parsley-custom' %>
