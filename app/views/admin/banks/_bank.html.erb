<tr>
  <td><%= image_tag(bank.image.url(:mini) || 'user_avatar.png') %></td>
	<td><%= bank.name %></td>
	<td><%= bank.owner %></td>
	<td><%= bank.email %></td>
  <td><%= bank.RFC %></td>
	<td>
    <% if @current_user.has_permission?('banks@update') %>
      <%= link_to "<i class='fa fa-pencil'></i> Modificar".html_safe,
        edit_admin_bank_path(bank), class: "btn btn-white btn-sm hidden-button" %>
    <% end # if @actions["UPDATE"] # %>

    <% if @current_user.has_permission_category?('bank_accounts') %>
      <%= link_to "<i class='fa fa-user'></i> Cuentas".html_safe,
        admin_bank_accounts_path(bank), class: "btn btn-white btn-sm hidden-button" %>
    <% end # if @actions["UPDATE"] # %>

    <% if @current_user.has_permission?('banks@delete') %>
			<%= link_to "<i class='fa fa-trash'></i> Eliminar".html_safe,
        admin_bank_path(bank), class: "btn btn-danger btn-sm hidden-button",
        method: "delete", data: { confirm: "Estas seguro(a) de eliminarlo?" } %>
    <% end # if @actions["DELETE"] # %>
	</td>
</tr>
