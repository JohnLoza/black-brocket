<tr>
  <td><%= image_tag(bank.image.url(:mini) || "user_avatar.png") %></td>
	<td><%= bank.name %></td>
	<td><%= bank.owner %></td>
	<td><%= bank.email %></td>
  <td><%= bank.RFC %></td>
	<td>
    <% if @current_user.has_permission?("banks@update") %>
      <%= link_to edit_admin_bank_path(bank), class: "btn btn-white btn-sm" do %>
        <i class="fa fa-pencil"></i> Modificar
      <% end %>
    <% end # if @actions["UPDATE"] # %>

    <% if @current_user.has_permission_category?("bank_accounts") %>
      <%= link_to admin_bank_accounts_path(bank), class: "btn btn-white btn-sm" do %>
        <i class="fa fa-user"></i> Cuentas
      <% end %>
    <% end # if @actions["UPDATE"] # %>

    <% if @current_user.has_permission?("banks@delete") %>
			<%= link_to admin_bank_path(bank), class: "btn btn-danger btn-sm",
        method: "delete", data: { confirm: "Estas seguro(a) de eliminarlo?" } do %>
        <i class="fa fa-trash"></i> Eliminar
      <% end %>
    <% end # if @actions["DELETE"] # %>
	</td>
</tr>
