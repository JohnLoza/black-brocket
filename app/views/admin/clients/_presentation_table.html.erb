<div class="col-lg-12">
  <div class="ibox">
  	<div class="ibox-content">

  			<div class="row m-b-sm m-t-sm">
          <div class="col-md-10">
            <input type="text" class="form-control input-sm m-b-xs" id="filter" maxlength="25" placeholder="Buscar en tabla">
          </div>
  				<div class="col-md-2">
  					<%= link_to(admin_clients_path, :class => "btn btn-white btn-sm full-width") do %>
  						<i class="fa fa-refresh"></i> Actualizar
  					<% end %>
  				</div>
  			</div>

        <table class="footable table table-stripped  toggle-arrow-tiny" data-filter=#filter>
            <thead>
              <tr>
                  <th data-sort-ignore="true"></th>
                  <th data-hide="phone" data-sort-ignore="true"></th>
                  <th data-hide="phone">Clave</th>
                  <th>Nombre comercial o de usuario</th>
                  <th data-hide="phone">Ubicación</th>
                  <th data-hide="all">Teléfono</th>
                  <th data-hide="phone">Acciones</th>
                  <th data-hide="all">Última revisión</th>
                  <th data-hide="all">Última visita</th>
              </tr>
            </thead>
            <tbody>
            <% @clients.each do |c| %>
              <tr>
                <td></td>
                <td class="project-people">
                  <%= link_to admin_client_path(c.hash_id) do %>
                    <% if !c.photo.blank? %>
                        <%= image_tag(c.photo.url(:mini), { :class => "img-circle" }) %>
                    <% else %>
                        <%= image_tag("user_avatar.png", { :class => "img-circle" }) %>
                    <% end %>
                  <% end %>
                </td>
                <td>
                  <%= c.hash_id %>
                  <% if c.is_new %><br>
                    <label class="label label-primary"> Nuevo </label>
                  <% end %>
                </td>
                <td><%= c.username %></td>
                <% c_city = c.City %>
                <td><%= c_city.name %>, <%= c_city.State.name %></td>
                <td>(<%=c_city.lada%>) <%= c.telephone %></td>
                <td>
                  <%= link_to "<i class='fa fa-truck'></i> Órdenes".html_safe,
                              admin_client_orders_path(c.hash_id),
                              :class => "btn btn-white btn-sm m-b-xs hidden-button"%>

                  <%= link_to "<i class='fa fa-pencil'></i> Precios".html_safe,
                              admin_client_prices_path(c.hash_id),
                              :class => "btn btn-white btn-sm m-b-xs hidden-button"%>

                  <%= link_to "<i class='fa fa-calendar'></i> Revisiones".html_safe,
                              admin_client_revisions_path(c.hash_id),
                              :class => "btn btn-white btn-sm m-b-xs hidden-button"%>

                  <%= link_to "<i class='fa fa-calendar'></i> Visitas de distribuidor".html_safe,
                              admin_client_visits_path(c.hash_id),
                              :class => "btn btn-white btn-sm m-b-xs hidden-button"%>


                  <% if @actions["SUPERVISOR_VISIT"] %>
                    <%= link_to "<i class='fa fa-calendar'></i> Visitas de supervisor".html_safe,
                              admin_supervisor_visits_path(c.hash_id),
                              :class => "btn btn-white btn-sm m-b-xs hidden-button" %>
                  <% end %>

                </td>
                <td><%= c.last_distributor_revision %></td>
                <td><%= c.last_distributor_visit %></td>
              </tr>
            <% end %>
            </tbody>
            <tfoot>
              <tr>
                <td colspan="7">
                  <div class="pull-right">
                    <%= will_paginate @clients, renderer: BootstrapPagination::Rails %>
                  </div>
                </td>
              </tr>
            </tfoot>
        </table>

        <script>
            $(document).ready(function() {
                $('.footable').footable();
            });
        </script>

  	</div>
  </div>
</div>
