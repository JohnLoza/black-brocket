<div class="col-lg-12">
  <div class="ibox">
  	<div class="ibox-content">

  			<div class="row m-b-sm m-t-sm">
          <div class="col-md-10">
            <input type="text" class="form-control input-sm m-b-xs" id="filter" maxlength="25" placeholder="Buscar en tabla">
          </div>
  				<div class="col-md-2">
  					<%= link_to(admin_distributors_path, :class => "btn btn-white btn-sm full-width") do %>
  						<i class="fa fa-refresh"></i> Actualizar
  					<% end %>
  				</div>
  			</div>

  			<table class="footable table table-stripped  toggle-arrow-tiny" data-filter=#filter>
  					<thead>
    					<tr>
                  <th data-sort-ignore="true"></th>
                  <th data-hide="phone" data-sort-ignore="true"></th>
    					    <th data-hide="phone">Clave</th>
    					    <th>Nombre comercial o de usuario</th>
                  <th data-hide="all">Nombre</th>
    					    <th data-hide="phone">Ciudad</th>
    					    <th data-hide="phone">Teléfono</th>
    					    <th data-hide="all">Fecha de creación</th>
                  <th data-hide="all">Última modificación</th>
    					    <th data-hide="phone" data-sort-ignore="true">Acción</th>
    					</tr>
  					</thead>
  					<tbody>
  					<% @distributors.each do |d| %>
  					  <tr>
                <td></td>
    						<td class="project-people">
                  <% if @actions["SHOW"] %>
                    <%= link_to admin_distributor_path(d.alph_key) do %>
                      <%= image_tag User.getImage(d, :mini), { :class => "img-circle" } %>
                    <% end # link_to end # %>
                  <% else %>
                    <%= image_tag User.getImage(d, :mini), { :class => "img-circle" } %>
                  <% end # if @actions["SHOW"] end #%>
    						</td>
    						<td><%= d.alph_key%></td>
    						<td><%= d.username %></td>
                <td><%= d.name %> <%= d.lastname %> <%= d.mother_lastname %></td>
                <% d_city = d.City %>
    						<td><%= d_city.name %>, <%= d_city.State.name %></td>
    						<td>(<%=d_city.LADA%>) <%= d.telephone %></td>
    						<td><%= l(d.created_at, format: :long) %></td>
                <td><%= l(d.updated_at, format: :long) %></td>
    						<td style="width: 416px;">

                  <% if @actions["UPDATE_DISTRIBUTION_REGIONS"] %>
                    <%= link_to "<i class='fa fa-globe'></i> Zonas de distribución".html_safe,
                    admin_distributor_regions_path(d.alph_key), :class => "btn btn-white btn-sm m-b-xs hidden-button" %>
                  <% end %>

                  <% if @actions["UPDATE"] %>
                    <%= link_to "<i class='fa fa-pencil'></i> Modificar".html_safe,
                    edit_admin_distributor_path(d.alph_key), :class => "btn btn-white btn-sm m-b-xs hidden-button" %>
                  <% end %>

                  <% if @actions["DELETE"] %>
                    <%= link_to "<i class='fa fa-trash'></i> Eliminar".html_safe,
                    admin_distributor_path(d.alph_key), :class => "btn btn-white btn-sm m-b-xs hidden-button",
                    method: "delete", data: { confirm: "Estas seguro(a) de eliminarlo?" } %>
                  <% end %>

                  <%= link_to "<i class='fa fa-user'></i> Clientes".html_safe,
                      admin_clients_path(distributor: d.alph_key), :class => "btn btn-white btn-sm m-b-xs hidden-button" %>

                  <%= link_to "<i class='fa fa-truck'></i> Órdenes".html_safe,
                      admin_orders_path(distributor: d.alph_key), :class => "btn btn-white btn-sm m-b-xs hidden-button" %>

                  <%= link_to "<i class='fa fa-money'></i> Comisiones".html_safe,
                      admin_commissions_path(distributor: d.alph_key), :class => "btn btn-white btn-sm m-b-xs hidden-button" %>
    						</td>
  					  </tr>
  					<% end %>
  					</tbody>
            <tfoot>
              <tr>
                <td colspan="7">
                  <div class="pull-right">
                    <%= will_paginate @distributors, renderer: BootstrapPagination::Rails %>
                  </div>
                </td>
              </tr>
            </tfoot>
  			</table>

        <script>
            $(document).ready(function() {
                $('.footable').footable();
            });
        </script>

  	</div>
  </div>
</div>
