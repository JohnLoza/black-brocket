<% @notifications.each do |n|%>
  <div class="alert alert-warning">
      <a href="<%= n.url %>?notification=<%=n.id%>" style="color: #333;">
          <i class="<%= n.icon %>"></i>
          <%= n.description %>
          <% if n.seen %>
            <span class="label label-primary pull-right"><i class="fa fa-check"></i> Visto</span>
          <% else %>
            <span class="label label-danger pull-right"><i class="fa fa-close"></i> Sin ver</span>
          <% end %>
      </a>
  </div>
<% end %>

<div class="row">
  <div class="col-md-12">
     <div class="pull-right">
       <%= will_paginate @notifications, renderer: BootstrapPagination::Rails %>
     </div>
   </div>
</div>
