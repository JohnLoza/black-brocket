<div class="pull-left shipment-details">
  <table class="table">
    <tbody>
      <tr>
        <td colspan="2" class="text-center"><b>
          Datos de entrega:
        </b></td>
      </tr>
      <% unless @guides_json.nil? %>
        <tr>
          <td colspan="2" class="text-center"><b>
            <%= "#{@guides_json['service']} 
              #{@guides_json['service_level_name']} 
              ($#{@guides_json['shipping_cost']})
              #{@guides_json['days']}" %>
          </b></td>
        </tr>
      <% end %>
      <tr>
        <td>Destinatario: </td>
        <td>
          <% if @fiscal_data.blank? %>
            <%= @client.name %> 
          <% else %>
            <%= @fiscal_data.name %>
          <% end # if @fiscal_data.blank? # %>
        </td>
      </tr>
      <tr>
        <td>Calle:</td>
        <td><%= @order_address[:street] %></td>
      </tr>
      <tr>
        <td class="table-padd">Número exterior:</td>
        <td><%= @order_address[:extnumber] %></td>
      </tr>
      <% if @order_address[:intnumber].present? %>
        <tr>
          <td>Número interior:</td>
          <td><%= @order_address[:intnumber] %></td>
        </tr>
      <% end %>
      <tr>
        <td>Colonia:</td>
        <td><%= @order_address[:col] %></td>
      </tr>
      <tr>
        <td>Código postal:</td>
        <td><%= @order_address[:cp] %></td>
      </tr>
      <tr>
        <td>Entre calle:</td>
        <td><%= @order_address[:street_ref1] %></td>
      </tr>
      <tr>
        <td>Y calle:</td>
        <td><%= @order_address[:street_ref2] %></td>
      </tr>
      <tr>
        <td>Población:</td>
        <td><%= @order.City.name %></td>
      </tr>
      <tr>
        <td>Estado:</td>
        <td><%= @order.City.State.name %></td>
      </tr>
    </tbody>
  </table>
</div>
