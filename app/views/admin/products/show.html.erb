<% provide(:title, "Productos") %>
<%= render partial: "/shared/admin/header_band", locals: {title: "Datos del producto", labels: ['Productos', 'Datos del producto'], links: [admin_products_path]} %>

<div class="wrapper wrapper-content">
  <div class="row animated fadeInRight">
    <div class="row">

        <div class="col-md-4">

            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Detalles del producto</h5>
                </div>
                <div class="ibox-content no-padding border-left-right">
                  <% @photos.each do |p| %>
                    <%= image_tag(p.photo.url(:thumb), { :class => "img-responsive full-width" }) if p.is_principal %>
                  <% end %>
                </div>
                <div class="ibox-content profile-content">
                    <h4><strong><%= @product.name %></strong></h4>
                    <table>
                      <tr>
                        <td class="table-padd"><strong>Identificador:</strong></td>
                        <td><%= @product.alph_key %></td>
                      </tr>
                    </table><br>
                    <!--div class="user-button">
                        <div class="row">
                            <div class="col-md-6 p-r-7">
                                <%#= link_to "<button type='button' class='btn btn-success btn-sm btn-block'><i class='fa fa-pencil'></i> Modificar</button>".html_safe, edit_admin_product_path(@product.alph_key) %>
                            </div>
                            <div class="col-md-6 p-l-7">
                                <%#= link_to " <button type='button' class='btn btn-danger btn-sm btn-block'><i class='fa fa-trash'></i> Eliminar</button>".html_safe, admin_product_path(@product.alph_key),
                                      method: "delete", data: { confirm: "Estas seguro(a) el producto?" } %>
                            </div>
                        </div>
                    </div-->
                </div>
            </div>

        </div>


        <div class="col-md-8">
          <!--Datos del producto-->
          <div class="ibox float-e-margins">
              <div class="ibox-title">
                  <h5>Información producto</h5>
                  <div class="ibox-tools">
                      <a class="collapse-link">
                          <i class="fa fa-chevron-up"></i>
                      </a>
                  </div>
              </div>
              <div class="ibox-content">
                  <div class="table-responsive">
                      <table class="table table-hover">
                          <tr>
                              <td><b>Clave:</b></td>
                              <td><%= @product.alph_key %></td>
                              <td><b>Nombre:</b></td>
                              <td><%= @product.name %></td>
                          </tr>
                          <tr>
                            <td><b>Precio del producto:</b></td>
                            <td>$ <%= @product.price %></td>
                            <td><b>Precio recomendado:</b></td>
                            <td>$ <%= @product.recommended_price %></td>
                          </tr>
                          <tr>
                            <td><b>Precio mínimo:</b></td>
                            <td>$ <%= @product.lowest_price %></td>
                            <td><b>Costo de envío (por menudeo):</b></td>
                            <td>$ <%= @product.shipping_cost %></td>
                          </tr>
                          <tr>
                            <td><b>Fecha de creación:</b></td>
                            <td><%= l(@product.updated_at, format: :long) %></td>
                            <td><b>Última modificación:</b></td>
                            <td><%= l(@product.created_at, format: :long) %></td>
                          </tr>
                          <tr>
                            <td><b>Presentación:</b></td>
                            <td><%= @product.presentation %></td>
                            <td><b>Publicación:</b></td>
                            <td><% if @product.show %>
                                    <span class="label label-primary">Publicado</span>
                                    <% else %>
                                    <span class="label label-danger">Sin Publicar</span>
                                    <% end %></td>
                          </tr>
                          <tr>
                              <td><b>Descripción:</b></td>
                              <td colspan="3"><%= @product.description.html_safe %></td>
                          </tr>
                      </table>
                  </div>
              </div>
          </div>
          <!--Datos del producto-->
          <div class="ibox float-e-margins">
              <div class="ibox-title">
                  <h5>Preparación del producto</h5>
                  <div class="ibox-tools">
                      <a class="collapse-link">
                          <i class="fa fa-chevron-up"></i>
                      </a>
                  </div>
              </div>
              <div class="ibox-content">
                  <%= @product.preparation.html_safe %>
              </div>
          </div>
          <!--Categorías del producto-->
          <div class="ibox float-e-margins">
              <div class="ibox-title">
                  <h5>Categorías</h5>
                  <div class="ibox-tools">
                      <a class="collapse-link">
                          <i class="fa fa-chevron-up"></i>
                      </a>
                  </div>
              </div>
              <div class="ibox-content no-padding">
                  <ul class="list-group">
                      <li class="list-group-item">
                        <% if @product.hot %>
                          <span class="badge badge-primary"><i class="fa fa-check"></i></span>
                        <% else %>
                          <span class="badge badge-danger"><i class="fa fa-close"></i></span>
                        <% end %>
                          Caliente
                      </li>
                      <li class="list-group-item ">
                        <% if @product.cold %>
                          <span class="badge badge-primary"><i class="fa fa-check"></i></span>
                        <% else %>
                          <span class="badge badge-danger"><i class="fa fa-close"></i></span>
                        <% end %>
                          Helado
                      </li>
                      <li class="list-group-item">
                        <% if @product.frappe %>
                          <span class="badge badge-primary"><i class="fa fa-check"></i></span>
                        <% else %>
                          <span class="badge badge-danger"><i class="fa fa-close"></i></span>
                        <% end %>
                          Frappé
                      </li>
                  </ul>
              </div>
          </div>
          <!--Fotos del producto-->
          <div class="ibox float-e-margins">
              <div class="ibox-title">
                  <h5>Fotos del producto</h5>
                  <div class="ibox-tools">
                      <a class="collapse-link">
                          <i class="fa fa-chevron-up"></i>
                      </a>
                  </div>
              </div>
              <div class="ibox-content">
                <% @photos.each do |p| %>
                  <%= image_tag(p.photo.url(:mini), { :class => "img-thumbnail photo-gallery" }) %>
                <% end %>
              </div>
          </div>

        </div>

    </div>
  </div>
</div><br>
