<div class="row">

  <div class="col-lg-12">
      <div class="ibox float-e-margins">
          <div class="ibox-content">
            <%= form_for(@bank_account, url: @url, :html => {:class => 'form-horizontal'}) do |f| %>
              <%= render :partial=>'/shared/error_messages', locals:{entity: @bank_account} %>

              <div class="form-group">
                <label class="col-sm-2 control-label"><%= f.label :bank_name, "Nombre del banco" %></label>
                <div class="col-sm-10">
                  <%= f.text_field :bank_name, { :class => 'form-control', :placeholder => "ej. Banamex", :required => true, :maxlength => 50 } %>
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label"><%= f.label :account_number, "Número de cuenta" %></label>
                <div class="col-sm-10">
                  <%= f.text_field :account_number, { :class => 'form-control', :required => true, :maxlength => 25 } %>
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label"><%= f.label :interbank_clabe, "CLABE interbancaria" %></label>
                <div class="col-sm-10">
                  <%= f.text_field :interbank_clabe, { :class => 'form-control', :required => true, :maxlength => 25 } %>
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label"><%= f.label :owner, "A nombre de:" %></label>
                <div class="col-sm-10">
                  <%= f.text_field :owner, { :class => 'form-control', :placeholder => "ej. BlackBrocket S.A. de C.V.", :required => true, :maxlength => 150 } %>
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label"><%= f.label :email, "Correo electrónico:" %></label>
                <div class="col-sm-10">
                  <%= f.email_field :email, { :class => 'form-control', :required => true, :maxlength => 150 } %>
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label"><%= f.label :RFC, "RFC:" %></label>
                <div class="col-sm-10">
                  <%= f.text_field :RFC, { :class => 'form-control', :required => true, :maxlength => 150 } %>
                </div>
              </div>

              <div class="hr-line-dashed"></div>
              <div class="form-group">
                  <div class="col-sm-4 col-sm-offset-2">
                      <a class="btn btn-white" href="javascript:history.back();">Cancelar</a>
                      <%= f.submit "Guardar cambios", :class => "btn btn-primary" %>
                  </div>
              </div>
            <% end %>
          </div>
      </div>
  </div>
</div>
