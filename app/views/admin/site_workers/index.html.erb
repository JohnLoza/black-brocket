<% provide(:title, "Trabajadores") %>
<%= render partial: "/shared/admin/header_band", locals: {title: "Trabajadores", labels: ['Trabajadores']} %>

<!--Content whit animation-->
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <%= render partial: '/shared/admin/header_with_search',
    locals: {title: 'Lista de Trabajadores', search_url: admin_site_workers_path,
      new_permission: 'site_workers@create', new_url: new_admin_site_worker_path } %>

      <div class="row">
        <div class="col-lg-12">
          <div class="ibox">
            <div class="ibox-content">

              <div class="row m-b-sm m-t-sm">
                <div class="col-md-10">
                  <input type="text" class="form-control input-sm m-b-xs" id="filter" maxlength="25" placeholder="Buscar en tabla">
                </div>
                <div class="col-md-2">
                  <%= link_to(admin_site_workers_path, class: 'btn btn-white btn-sm full-width') do %>
                  <i class="fa fa-refresh"></i> Actualizar
                  <% end %>
                </div>
              </div>

              <table class="footable table table-stripped  toggle-arrow-tiny" data-filter=#filter>
                <thead>
                  <tr>
                    <th data-sort-ignore="true"></th>
                    <th data-hide="phone" data-sort-ignore="true"></th>
                    <th data-hide="phone">Clave</th>
                    <th>Nombre</th>
                    <th data-hide="phone">Ubicación</th>
                    <th data-hide="phone,tablet">Teléfono</th>
                    <th data-hide="all">Fecha de creación</th>
                    <th data-hide="all">Última modificación</th>
                    <th data-sort-ignore="true">Acción</th>
                  </tr>
                </thead>
                <tbody>
                  <%= render @workers %>
                </tbody>
                <tfoot>
                  <tr>
                    <td colspan="7">
                      <div class="pull-right">
                        <%= will_paginate @workers, renderer: BootstrapPagination::Rails %>
                      </div>
                    </td>
                  </tr>
                </tfoot>
              </table>

              <script>
              $(document).ready(function() {
                $('.footable').footable();
              });
              </script>

            </div>
          </div>
        </div>

      </div>

    </div>
  </div>
  <!--End content whit animation-->
