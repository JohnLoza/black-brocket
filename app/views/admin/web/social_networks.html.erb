<% provide(:title, "Estadísticas") %>
<%= render partial: "/shared/admin/header_band", locals: {title: "Web", labels: ['Web', 'Redes Sociales'], links: [admin_web_path]} %>

<!--Content whit animation-->
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <!--Content-->
    <div class="row">
      <div class="col-lg-12">
        <div class="ibox float-e-margins">
          <div class="ibox-title">
               <h5>Cambia los hipervínculos de las redes sociales</h5>
               <div class="ibox-tools">
                   <a class="collapse-link">
                       <i class="fa fa-chevron-up"></i>
                   </a>
               </div>
          </div>
          <div class="ibox-content">
              <br/>
              <% @networks.each do |n| %>

                <%= form_for(n, url: admin_update_social_network_path(n.id), :html => {:class => 'form-horizontal'}, method: :put, :class => "form") do |f| %>

                <div class="form-group">
                  <label class="col-sm-2 control-label"> <%= f.label :url, "URL de " + n.name %></label>
                  <div class="col-sm-7">
                    <%= f.text_field :url, :class => "form-control", maxlength: 210 %></br>
                  </div>
                  <div class="col-sm-3">
                    <%= f.submit "Guardar url de " + n.name, :class => "btn btn-primary btn-sm btn-block" %>
                  </div>
                </div>

                <% end %>

              <% end %>

              <div class="hr-line-dashed"></div>
              <%= link_to "Regresar".html_safe, admin_web_path, :class => "btn btn-white" %>

          </div>

        </div>
      </div>
    </div>

  </div>
</div>
<!--End content whit animation-->
<br><br>
