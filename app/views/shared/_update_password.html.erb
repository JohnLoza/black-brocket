<%= form_tag(update_password_path, method: :post, id: :update_password) do %>
  <div class="form-group">
    <label for="old_password">Contraseña actual</label>
    <%= password_field_tag :old_password, "", required: true,
      class: "form-control", placeholder: "******" %>
  </div>

  <div class="form-group">
    <label for="new_password">Nueva contraseña</label>
    <%= password_field_tag :new_password, "", required: true,
      class: "form-control", placeholder: "******" %>
  </div>

  <div class="form-group">
    <label for="new_password_confirmation">Confirmar nueva contraseña</label>
    <%= password_field_tag :new_password_confirmation, "", required: true,
      class: "form-control", placeholder: "******", 
      "data-parsley-equalto"=>"#new_password" %>
  </div>

  <input type="submit" name="commit" value="Guardar" 
    class="btn btn-custom-1" data-disable-with="Guardar">
<% end %>
