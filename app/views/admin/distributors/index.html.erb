<% provide(:title, "Distribuidores") %>
<%= render partial: "/shared/admin/header_band", locals: {title: "Distribuidores", labels: ['Distribuidores']} %>

<!--Content whit animation-->
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <%= render 'header_with_search' %>

    <div class="row">
      <div class="col-lg-12">
        <div class="ibox">
          <div class="ibox-content">

            <div class="row m-b-sm m-t-sm">
              <div class="col-md-10">
                <input type="text" class="form-control input-sm m-b-xs" id="filter" maxlength="25" placeholder="Buscar en tabla">
              </div>
              <div class="col-md-2">
                <%= link_to(admin_distributors_path, class: "btn btn-white btn-sm full-width") do %>
                <i class="fa fa-refresh"></i> Actualizar
                <% end %>
              </div>
            </div>

            <table class="footable table table-stripped  toggle-arrow-tiny" data-filter=#filter>
              <thead>
                <tr>
                  <th data-sort-ignore="true"></th>
                  <th data-hide="phone" data-sort-ignore="true"></th>
                  <th data-hide="phone">Clave</th>
                  <th>Nombre comercial o de usuario</th>
                  <th data-hide="all">Nombre</th>
                  <th data-hide="phone">Ciudad</th>
                  <th data-hide="phone">Teléfono</th>
                  <th data-hide="all">Fecha de creación</th>
                  <th data-hide="all">Última modificación</th>
                  <th data-hide="phone" data-sort-ignore="true">Acción</th>
                </tr>
              </thead>
              <tbody>
                <%= render @distributors %>
              </tbody>
              <tfoot>
                <tr>
                  <td colspan="7">
                    <div class="pull-right">
                      <%= will_paginate @distributors, renderer: BootstrapPagination::Rails %>
                    </div>
                  </td>
                </tr>
              </tfoot>
            </table>

            <script>
            $(document).ready(function() {
              $('.footable').footable();
            });
            </script>

          </div>
        </div>
      </div>

    </div>

  </div>
</div>
<!--End content whit animation-->
<br><br>
