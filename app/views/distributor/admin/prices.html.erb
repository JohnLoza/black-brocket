<% provide(:title, "Precios") %>
<%= render partial: "/shared/distributor/header_band", locals: {title: "Listado de precios", 
  labels: ["Precios"]} %>

<!--Content whit animation-->
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">

    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>Listado de precios</h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
        <div class="row m-b-sm m-t-sm">
          <div class="col-md-12">
            <input type="text" class="form-control input-sm m-b-xs" id="filter" maxlength="25" placeholder="Buscar en tabla">
          </div>
  			</div>
        <table class="footable table table-striped toggle-arrow-tiny" data-filter=#filter>
          <thead>
            <th>Producto</th>
            <th class="warning">Precio máximo</th>
            <th>Precio recomendado</th>
            <th>Precio mínimo</th>
          </thead>
          <tbody>
          <% @products.each do |p| %>
            <tr>
              <td><label><%=p.name%>:</label></td>
              <td class="warning">$ <%= p.price %></td>
              <td>$ <%= p.recommended_price %></td>
              <td>$ <%= p.lowest_price %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
        <div class="pull-right">
          <%= will_paginate @products, renderer: BootstrapPagination::Rails %>
        </div>
      </div>
    </div>

  </div>
</div>

<script>
  $(document).ready(function() {
    $(".footable").footable();
  });
</script>
