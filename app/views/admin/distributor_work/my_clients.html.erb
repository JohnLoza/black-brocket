<% provide(:title, "Clientes") %>
<%= render partial: "/shared/admin/header_band", locals: {title: "Trabajo de Distribuidor", labels: ['Clientes', 'Mis Clientes'], links: [admin_distributor_work_clients_path]} %>

<!--Content whit animation-->
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">

    <div class="ibox">
      <div class="ibox-content" style="display: block;">
        <div class="row">
          <div class="col-sm-9 b-r margin-bot-resp text-center">
            <h3 class="m-b-xxs">Lista de mis clientes</h3>
            <small>Aquí verás la lista de los clientes de los que me haré cargo.</small>
           </div>
           <div class="hr-line-dashed pro-mobile"></div>
           <div class="col-md-3 b-r margin-bot-resp text-center">
             <h3 class="m-b-xxs">Órdenes</h3>
             <%= link_to "<i class='fa fa-truck fa-3x'></i>".html_safe, admin_distributor_work_orders_path %>
           </div>
         </div>
      </div>
    </div>

    <div class="ibox ibox-content">

      <div class="row m-b-sm m-t-sm">
        <div class="col-md-12">
          <input type="text" class="form-control input-sm m-b-xs" id="filter" maxlength="25" placeholder="Buscar en tabla">
        </div>
			</div>

      <table class="footable table table-stripped toggle-arrow-tiny" data-filter=#filter>
					<thead>
  					<tr>
                <th data-sort-ignore="true"></th>
  					    <th data-hide="phone" data-sort-ignore="true"></th>
  					    <th>Nombre</th>
  					    <th data-hide="phone">Email</th>
                <th data-hide="phone,tablet">Teléfono</th>
  					    <th data-hide="phone,tablet">Celular</th>
  					    <th data-hide="phone">Ubicación</th>
                <th>Acción</th>
  					</tr>
					</thead>
					<tbody>
          <% @clients.each do |c| %>

            <%
              distributor = c.City.Distributor
              if distributor
                c.update_attribute(:worker_id, nil)
                next
              end
            %>

            <tr>
              <td>
                <% if c.is_new %>
                  <label class="label label-primary"> Nuevo </label>
                <% end %>
              </td>
              <%= render partial: "client_block_content", locals: {client: c} %>
    					<td>
                <%= link_to "<i class='fa fa-truck'></i> Órdenes".html_safe,
                            admin_client_orders_path(c.alph_key),
                            :class => "btn btn-white btn-sm m-b-xs hidden-button"%>
                <%= link_to "<i class='fa fa-money'></i> Pactar precios".html_safe,
                            admin_distributor_work_client_prices_path(c.alph_key),
                            :class => "btn btn-white btn-sm m-b-xs hidden-button" %>
                <%= link_to "<i class='fa fa-envelope-o'></i> Mensajes".html_safe,
                            admin_distributor_work_client_messages_path(c.alph_key),
                            :class => "btn btn-white btn-sm m-b-xs hidden-button"%>
              </td>
  					</tr>
          <% end %>
          </tbody>
          <tfoot>
            <tr>
              <td colspan="8">
                <div class="pull-right">
                  <!--footable-->
                </div>
              </td>
            </tr>
          </tfoot>
      </table>

      <script>
          $(document).ready(function() {
              $('.footable').footable();
          });
      </script>

    </div>

  </div>
</div>
