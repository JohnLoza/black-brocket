<div class="ibox">
  <div class="ibox-content text-center">
    <h3 class="m-b-xxs">Historial</h3>
  </div>
</div>

<div class="row">
  <div class="col-lg-6 col-md-6 col-sm-12">
    <div class="ibox float-e-margins">

      <div class="ibox-content">
        <table class="table">
          <thead>
            <th>Usuario</th>
            <th>Fechas solicitadas</th>
            <th>Fecha de la solicitud</th>
          </thead>
          <tbody>
            <% @report_history.each do |report| %>
              <tr>
                <td>
                  <%= link_to report.Worker.username,
                      admin_site_worker_path(report.Worker.hash_id),
                      target: '_blank' %>
                </td>
                <td>
                  <%= l(report.from_date, format: :short) %> -
                  <%= l(report.to_date, format: :short) %>
                </td>
                <td><%= l(report.created_at, format: :short) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>

    </div>
  </div>
</div>
