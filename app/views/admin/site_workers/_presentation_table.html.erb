<div class="col-lg-12">
  <div class="ibox">
  	<div class="ibox-content">

  			<div class="row m-b-sm m-t-sm">
          <div class="col-md-10">
            <input type="text" class="form-control input-sm m-b-xs" id="filter" maxlength="25" placeholder="Buscar en tabla">
          </div>
  				<div class="col-md-2">
  					<%= link_to(admin_site_workers_path, :class => "btn btn-white btn-sm full-width") do %>
  						<i class="fa fa-refresh"></i> Actualizar
  					<% end %>
  				</div>
  			</div>

  			<table class="footable table table-stripped  toggle-arrow-tiny" data-filter=#filter>
  					<thead>
    					<tr>
                  <th data-sort-ignore="true"></th>
    					    <th data-hide="phone" data-sort-ignore="true"></th>
    					    <th data-hide="phone">Clave</th>
    					    <th>Nombre</th>
    					    <th data-hide="phone">Ubicación</th>
    					    <th data-hide="phone,tablet">Teléfono</th>
    					    <th data-hide="all">Fecha de creación</th>
                  <th data-hide="all">Última modificación</th>
    					    <th data-sort-ignore="true">Acción</th>
    					</tr>
  					</thead>
  					<tbody>
  					<% @workers.each do |w| %>
  					  <tr>
                <td></td>
    						<td class="project-people">

                  <% if @actions["SHOW"] %>
                    <%= link_to admin_site_worker_path(w.hash_id) do %>
                      <%= image_tag User.getImage(w, :mini), { :class => "img-circle" } %>
                    <% end # link_to end # %>
                  <% else %>
                    <%= image_tag User.getImage(w, :mini), { :class => "img-circle" } %>
                  <% end # if @actions["SHOW"] end #%>

    						</td>
    						<td><%= w.hash_id%></td>
    						<td><%= w.name %></td>
                <% w_city = w.City %>
    						<td><%= w_city.name %>, <%= w_city.State.name %></td>
    						<td>(<%= w_city.lada %>) <%= w.telephone %></td>
    						<td><%= l(w.created_at, format: :long) %></td>
                <td><%= l(w.updated_at, format: :long) %></td>
    						<td>

                  <% if @actions["UPDATE_PERMISSIONS"] %>
                    <%= link_to "<i class='fa fa-pencil'></i> Permisos".html_safe,
                      edit_permissions_admin_site_worker_path(w.hash_id), :class => "btn btn-white btn-sm hidden-button" %>
                  <% end %>

                  <% if @actions["UPDATE"] %>
      							<%= link_to "<i class='fa fa-pencil'></i> Modificar".html_safe,
                      edit_admin_site_worker_path(w.hash_id), :class => "btn btn-white btn-sm hidden-button" %>
                  <% end %>

                  <% if @actions["DELETE"] %>
      							<%= link_to "<i class='fa fa-trash'></i> Eliminar".html_safe,
                      admin_site_worker_path(w.hash_id), :class => "btn btn-white btn-sm hidden-button",
                      method: "delete", data: { confirm: "Estas seguro(a) de eliminarlo?" } %>
                  <% end %>

    						</td>
  					  </tr>
  					<% end %>
  					</tbody>
            <tfoot>
              <tr>
                <td colspan="7">
                  <div class="pull-right">
                    <%= will_paginate @workers, renderer: BootstrapPagination::Rails %>
                  </div>
                </td>
              </tr>
            </tfoot>
  			</table>

        <script>
            $(document).ready(function() {
                $('.footable').footable();
            });
        </script>

  	</div>
  </div>
</div>
