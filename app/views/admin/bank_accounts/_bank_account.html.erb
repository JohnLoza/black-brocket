<tr>
  <td><%= image_tag @bank.image.url(:mini) || "user_avatar.png" %></td>
  <td><%= @bank.name %></td>
  <td><%= bank_account.account_number %></td>
  <td><%= bank_account.interbank_clabe %></td>
  <td><%= bank_account.owner %></td>
  <td>
    <% if @current_user.has_permission?("bank_accounts@update") %>
      <%= link_to edit_admin_bank_account_path(@bank, bank_account), 
        class: "btn btn-white btn-sm" do %>
        <i class="fa fa-pencil"></i> Modificar
      <% end %>
    <% end # if @actions["UPDATE"] # %>

    <% if @current_user.has_permission?("bank_accounts@delete") %>
      <%= link_to admin_bank_account_path(params[:bank_id], bank_account), class: "btn btn-danger btn-sm",
        method: "delete", data: { confirm: "Estas seguro(a) de eliminarlo?" } do %>
        <i class="fa fa-trash"></i> Eliminar
      <% end %>
    <% end # if @actions["DELETE"] # %>
  </td>
</tr>
