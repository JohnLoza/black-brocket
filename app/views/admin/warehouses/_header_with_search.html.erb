<div class="row">
  <div class="col-lg-12">
    <div class="ibox-content" style="display: block;">
      <div class="row">
        
        <div class="col-sm-8 b-r margin-bot-resp">
          <h3 class="m-t-none m-b">Lista de almacenes</h3>
          <%= form_for(:class, url: admin_warehouses_path, method: :get) do |f| %>
            <div class="input-group">
              <%= f.text_field :search, value: search_params, class: 'input form-control',
                placeholder: 'Buscar', maxlength: 20  %>

              <span class="input-group-btn">
                <%= f.submit 'Buscar', class: 'btn btn btn-success' %>
              </span>
            </div>
          <% end %>
        </div>

        <div class="hr-line-dashed pro-mobile"></div>
        <% if @current_user.has_permission?('warehouses@create') %>
          <div class="col-sm-2 text-center" style="border-right: solid #E7EAEC 1px;">
            <h4>Registrar Nuevo</h4>
            <%= link_to "<i class='fa fa-cubes med-icon'></i>".html_safe, new_admin_warehouse_path %>
          </div>
        <% end %>

        <div class="hr-line-dashed pro-mobile"></div>
        <% if @current_user.has_permission?('warehouse_products@batch_search') %>
          <div class="col-sm-2 text-center">
            <h4>BÃºsqueda de lote</h4>
            <%= link_to "<i class='fa fa-search med-icon'></i>".html_safe, admin_batch_search_path %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
