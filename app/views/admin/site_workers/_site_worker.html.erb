<tr>
  <td></td>
  <td class="project-people">

    <% if @current_user.has_permission?("site_workers@show") %>
    <%= link_to admin_site_worker_path(site_worker) do %>
    <%= image_tag site_worker.avatar_url(:mini), class: "img-circle" %>
    <% end # link_to end # %>
    <% else %>
    <%= image_tag @current_user.avatar_url(:mini), class: "img-circle" %>
    <% end # if @actions["SHOW"] end #%>

  </td>
  <%= content_tag(:td, site_worker.hash_id) %>
  <%= content_tag(:td, site_worker) %>
  <%= content_tag(:td, site_worker.location) %>
  <%= content_tag(:td, site_worker.telephone_with_lada) %>
  <%= content_tag(:td, l(site_worker.created_at, format: :long)) %>
  <%= content_tag(:td, l(site_worker.updated_at, format: :long)) %>
  <td>

    <% if @current_user.has_permission?("site_workers@update_permissions") %>
      <%= link_to edit_permissions_admin_site_worker_path(site_worker),
        class: "btn btn-white btn-sm hidden-button" do %>
        <i class="fa fa-pencil"></i> Permisos
      <% end %>
    <% end %>

    <% if @current_user.has_permission?("site_workers@update_personal_data") or
      @current_user.has_permission?("site_workers@update_warehouse") %>
      <%= link_to edit_admin_site_worker_path(site_worker),
        class: "btn btn-white btn-sm hidden-button" do %>
        <i class="fa fa-pencil"></i> Modificar
      <% end %>
    <% end %>

    <% if @current_user.has_permission?("site_workers@delete") %>
      <%= link_to admin_site_worker_path(site_worker), class: "btn btn-danger btn-sm hidden-button",
        method: "delete", data: { confirm: "Estas seguro(a) de eliminarlo?" } do %>
        <i class="fa fa-trash"></i> Eliminar
      <% end %>
    <% end %>

  </td>
</tr>
