<div class="col-lg-12">
   <div class="ibox">
       <div class="ibox-content">

           <div class="row m-b-sm m-t-sm">
               <div class="col-md-10">
                 <input type="text" class="form-control input-sm m-b-xs" id="filter" maxlength="25" placeholder="Buscar en tabla">
               </div>
               <div class="col-md-2">
                  <%= link_to(admin_products_path, class: "btn btn-white btn-sm m-b-xs full-width") do %>
                    <i class="fa fa-refresh"></i> Actualizar
                  <% end %>
               </div>
           </div>

           <!--<div class="table-responsive">-->
               <table class="footable table table-stripped toggle-arrow-tiny" data-filter=#filter>
                   <thead>
                   <tr>
                       <th data-sort-ignore="true"></th>
                       <th data-sort-ignore="true" data-hide="phone">Imagen</th>
                       <th data-hide="phone">Clave</th>
                       <th>Producto</th>
                       <th data-hide="phone" data-type="numeric">Precio</th>
                       <th data-hide="all">Fecha de creación</th>
                       <th data-hide="all">Última modificación</th>
                       <th data-hide="phone">Web</th>
                       <th data-hide="phone" data-sort-ignore="true">Acción</th>
                   </tr>
                   </thead>
                   <tbody>
                   <% @products.each do |p| %>
                   <tr>
                       <td></td>
                       <td class="project-people">
                         <% cont=0 %>
                         <% @photos.each do |photo| %>
                           <% if photo.product_id == p.id %>

                             <% if @actions["SHOW"] %>
                                 <%= link_to admin_product_path(p.hash_id) do %>
                                    <%= image_tag(photo.photo.url(:mini), class: "img-circle") %>
                                 <% end %>
                             <% else %>
                                 <%= image_tag(photo.photo.url(:mini), class: "img-circle") %>
                             <% end %>

                             <% break %>
                           <% end %>
                           <% cont+=1 %>
                         <% end %>
                       </td>

                       <td><%=p.hash_id%></td>
                       <td><%= p.name %></td>
                       <td>$ <%= p.price %></td>
                       <td><%= l(p.created_at, format: :long) %></td>
                       <td><%= l(p.updated_at, format: :long) %></td>
                       <td>
                        <% if p.show %>
                        <span class="label label-primary">Publicado</span>
                        <% else %>
                        <span class="label label-danger">Sin Publicar</span>
                        <% end %>
                       </td>
                       <td class="table-butt">
                         <% if @actions["UPDATE"] %>
                           <%= link_to "<i class='fa fa-pencil'></i> Modificar".html_safe,
                           edit_admin_product_path(p.hash_id),
                           class: "btn btn-white btn-sm hidden-button" %>
                         <% end %>
                         <% if @actions["DELETE"] %>
                           <%= link_to "<i class='fa fa-trash'></i> Eliminar".html_safe,
                           admin_product_path(p.hash_id), class: "btn btn-white btn-sm hidden-button",
                           method: "delete", data: { confirm: "Estas seguro(a) de eliminarlo?" } %>
                         <% end %>
                       </td>
                   </tr>
                   <% end %>
                   </tbody>
                   <tfoot>
                   <tr>
                       <td colspan="7">
                           <div class="pull-right">
                             <%= will_paginate @products, renderer: BootstrapPagination::Rails %>
                           </div>
                       </td>
                   </tr>
                   </tfoot>
               </table>
           <!--</div>-->
           <!-- Page-Level Scripts -->
           <script>
               $(document).ready(function() {
                   $('.footable').footable();
               });
           </script>

       </div>
   </div>
</div>
