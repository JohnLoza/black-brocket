<% provide(:title, "Distribuidores") %>
<%= render partial: "/shared/admin/header_band", locals: {title: "Zonas de distribución", 
  labels: ["Distribuidores", "Zonas de distribución"], links: [admin_distributors_path]} %>

<!--Content whit animation-->
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">

    <div class="row">
      <div class="col-lg-12">
        <div class="ibox-content" style="display: block;">
          <div class="row">
            <div class="col-sm-6 b-r margin-bot-resp">
              <h3 class="m-t-none m-b"><strong>Distribuidor:</strong> <%= @distributor.full_name %></h3>
              <div class="col-sm-4">
                <div class="text-center">
                  <%= image_tag(@distributor.avatar_url(:mini),
                  class: "img-circle m-t-xs img-responsive display-initial margin-bot-resp" ) %>
                </div>
              </div>
              <div class="col-sm-8">
                <table>
                  <tr>
                    <td class="table-padd"><strong><i class="fa fa-key"></i> Identificador:</strong></td>
                    <td><%= @distributor.hash_id %></td>
                  </tr>
                  <tr>
                    <td><strong><i class="fa fa-map-marker"></i> Ubicación:</strong></td>
                    <td><%= @distributor.location %></td>
                  </tr>
                  <tr>
                    <td><strong><i class="fa fa-phone"></i> Teléfono:</strong></td>
                    <td><%= @distributor.telephone_with_lada %></td>
                  </tr>
                  <tr>
                    <td><strong><i class="fa fa-calendar-o"></i> Creado el:</strong></td>
                    <td><%= l(@distributor.created_at, format: :long) %></td>
                  </tr>
                </table>
              </div>
            </div>
            <div class="hr-line-dashed pro-mobile"></div>
            <div class="col-sm-6">
              <h4>Agregar Nueva Region</h4>
              <%= render "form" %>
            </div>
          </div>
        </div>
      </div>


      <div id="distributor_regions">
        <% @regions.each do |city| %>
        <%= render partial: "region", locals: { city: city, dist_id: @distributor.hash_id } %>
        <% end %>
      </div>

    </div><br><br>

  </div>
</div>
<!--End content whit animation-->
